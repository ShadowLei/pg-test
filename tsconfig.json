{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2017",
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./src/@types"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "./dist/*",
    "node_modules",
    "./testdata/*",
    "./test/*"
  ]
}